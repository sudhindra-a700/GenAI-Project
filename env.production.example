# GenAI Smart Contract Pro - Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# ================================
# Google Cloud Configuration
# ================================
GOOGLE_CLOUD_PROJECT=genai-project-472704
REGION=asia-south1
VERTEX_AI_LOCATION=europe-west4

# ================================
# Cloud Run Configuration
# ================================
SERVICE_NAME=genai-contract-pro
CLOUD_RUN_REGION=us-central1
CLOUD_RUN_PLATFORM=managed
CLOUD_RUN_ALLOW_UNAUTHENTICATED=true

# ================================
# Application Configuration
# ================================
SECRET_KEY=your-production-secret-key-here
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO
PORT=8080

# ================================
# Database Configuration
# ================================
DATABASE_URL=sqlite:///genai_contract_pro.db
DATABASE_TYPE=sqlite

# ================================
# Vertex AI Configuration
# ================================
VERTEX_AI_MODEL=gemini-1.5-pro
VERTEX_AI_TEMPERATURE=0.2
VERTEX_AI_MAX_OUTPUT_TOKENS=8192
VERTEX_AI_TOP_P=0.8
VERTEX_AI_TOP_K=40
VERTEX_AI_ENDPOINT_ID=your-endpoint-id

# ================================
# RAG Configuration
# ================================
RAG_INDEX_ENDPOINT=your-rag-index-endpoint
RAG_DEPLOYED_INDEX_ID=indian-constitution-index
EMBEDDING_MODEL=text-embedding-004
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_CHUNKS=5
RAG_SIMILARITY_THRESHOLD=0.7

# ================================
# Model Configuration
# ================================
SUMMARIZATION_MODEL=gemini-1.5-flash-002
CONSTITUTIONAL_MODEL=gemini-1.5-flash-002
VERIFICATION_MODEL=IndianLegalBERT

# ================================
# API Configuration
# ================================
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=1
API_TIMEOUT=300
MAX_TEXT_LENGTH=8000
CONFIDENCE_THRESHOLD=35
MAX_REQUEST_SIZE=10485760

# ================================
# CORS Configuration
# ================================
ALLOWED_ORIGINS=chrome-extension://,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# ================================
# Security Configuration
# ================================
ALLOWED_HOSTS=*
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
API_KEY=your-production-api-key-here

# ================================
# Monitoring Configuration
# ================================
ENABLE_MONITORING=true
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics

# ================================
# Logging Configuration
# ================================
LOG_FORMAT=json
LOG_FILE=application.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ================================
# Performance Configuration
# ================================
CACHE_TTL=300
MAX_CONCURRENT_REQUESTS=10
CACHE_TYPE=memory
CACHE_MAX_SIZE=1000

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ================================
# Chrome Extension Configuration
# ================================
EXTENSION_ID=your-extension-id
EXTENSION_VERSION=1.0.0
EXTENSION_UPDATE_URL=https://your-domain.com/extension/updates.xml
